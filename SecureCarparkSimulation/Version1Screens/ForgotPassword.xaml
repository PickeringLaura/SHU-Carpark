<Page
    x:Class="SecureCarparkSimulation.ForgotPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SecureCarparkSimulation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="565">

    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Uniform">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="878" Height="391">
            <TextBlock x:Name="txt_resetPass" HorizontalAlignment="Left" Height="65" Margin="191,22,0,0" Text="Please Enter A New Password Below" TextWrapping="Wrap" VerticalAlignment="Top" Width="503" FontSize="24" TextAlignment="Center"/>
            <TextBox x:Name="txtBx_EnterPass" HorizontalAlignment="Left" Height="65" Margin="191,100,0,0" Text="#Enter Password#" VerticalAlignment="Top" Width="461" TextAlignment="Center" FontSize="24"/>
            <Button x:Name="btn_Continue" Content="Continue" HorizontalAlignment="Left" Height="125" Margin="245,186,0,0" VerticalAlignment="Top" Width="395" FontSize="48" Click="btn_Continue_Click"/>
        </Grid>
    </Viewbox>
</Page>
