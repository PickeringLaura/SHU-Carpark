<Page
    x:Class="SecureCarparkSimulation.BayLocked"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SecureCarparkSimulation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="370">

    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Uniform">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="Txt_NowLocked" HorizontalAlignment="Center" Height="81" Margin="165,14,197,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="918" FontSize="48" TextAlignment="Center" Text="This bay is now Locked"/>
        <Button x:Name="Btn_Continue" Content="Continue to Unlock" HorizontalAlignment="Center" Height="136" Margin="307,240,315,0" VerticalAlignment="Top" Width="658" FontSize="72" Click="button_Click"/>
        <TextBlock x:Name="Txt_ToContinue" HorizontalAlignment="Center" Height="85" Margin="170,110,185,0" Text="To unlock press Continue" TextWrapping="Wrap" VerticalAlignment="Top" Width="925" FontSize="48" TextAlignment="Center"/>
    </Grid>
    </Viewbox>
</Page>
