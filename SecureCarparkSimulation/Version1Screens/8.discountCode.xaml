<Page
    x:Class="SecureCarparkSimulation.discountCode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SecureCarparkSimulation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="380">

    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Uniform">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="txt_EnterDiscountCodeBelow" HorizontalAlignment="Center" Height="49" Margin="68,14,28,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1059" FontSize="36" TextAlignment="Center" Text="Please Enter Discount Code Below And Press Continue"/>
            <Button x:Name="btn_Continue" Content="Continue" HorizontalAlignment="Center" Height="143" Margin="370,199,385,-2" VerticalAlignment="Top" Width="400" FontSize="48" Click="btn_Continue_Click"/>
            <PasswordBox x:Name="pass_EnterDiscount" HorizontalAlignment="Left" Height="63" Margin="365,68,0,0" VerticalAlignment="Top" Width="407" MaxLength="5" PlaceholderText="#EnterDiscountCode#" FontSize="36"/>
            <TextBlock x:Name="DiscountStatusText" HorizontalAlignment="Left" Height="49" Margin="365,140,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Width="407"/>
        </Grid>
    </Viewbox>
</Page>
